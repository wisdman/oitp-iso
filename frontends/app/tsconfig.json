{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./artifacts/out-tsc",

    "charset": "utf8",
    "newLine": "LF",
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "lib": ["DOM", "ES2018", "ESNext"],

    "typeRoots": [ "./node_modules/@types" ]
  }
}
